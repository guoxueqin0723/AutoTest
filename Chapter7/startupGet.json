[
  {
    "description": "模拟一个没有参数的get请求",
    "request": {
      "uri": "/getdemo",
      "method": "get"
    },
    "response":{
    "text": "这是一个没有参数的get请求",
      "headers":{
        "Content-Type":"text/html;charset=gbk"
      }
}
  },
  {
    "description": "模拟一个带参数的get请求",
    "request": {
      "uri": "/getwithparam",
      "method":"get",
      "queries": {
        "name": "libai",
        "age": "28"
      }
    },

    "response": {
      "text": "这是一个带参数的get请求（参数，姓名：李白，年龄：28）",
      "headers":{
        "Content-Type":"text/html;charset=gbk"
      }
    }
  }
]