      "method": "post",
      "cookies": {
        "login": "success"
      },
      "json": {
        "name": "guoxueqin",
        "level": "CET-6"
      }

    },
    "response": {
      "status": "200",
      "headers":{
        "Content-Type": "text/html;charset=gbk"
